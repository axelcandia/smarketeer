

extends layout

block content 

  .login-container
    form( method="post")#login-form.well.span4
      h1 Hello!
      p.subheading Please Login To Your Account
      label(for='email') Email
      input(type='email', name='email', id='email', placeholder='Email', autofocus=true).span4.required
      label(for='password')
      input(type='password', name='password', id='password', placeholder='Password').span4.required
      button(type="submit")#btn-login.btn.btn-primary
        i.icon-lock.icon-white
        | Sign in
      label#remember-me.checkbox Remember Me
        input(type="checkbox", checked='checked')
      div.clear-fix
      hr
      div.btm-links
        a(href='/forgot')#forgot-password Forgot Your Password?
        a(href='/signup')#create-account Create An Account 
      input(type='hidden', name='_csrf', value=_csrf)
      //.col-sm-offset-3.col-sm-7
        a.btn.btn-block.btn-facebook.btn-social(href='/auth/facebook')
          i.fa.fa-facebook
          | Sign in with Facebook
        a.btn.btn-block.btn-twitter.btn-social(href='/auth/twitter')
          i.fa.fa-twitter
          | Sign in with Twitter
        a.btn.btn-block.btn-google.btn-social(href='/auth/google')
          i.fa.fa-google-plus
          | Sign in with Google 
        a.btn.btn-block.btn-linkedin.btn-social(href='/auth/linkedin')
          i.fa.fa-linkedin
          | Sign in with LinkedIn
        a.btn.btn-social-icon.btn-twitter
          span.fa.fa-twitter
  //include modals/alert
  //include modals/lost-password
